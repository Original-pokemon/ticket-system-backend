generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Group {
  id          String @id
  description String
  users       User[]

  @@map("groups")
}

model Bush {
  description     String
  id              String          @id
  managers        Manager[]
  petrol_stations PetrolStation[]
  task_performers TaskPerformer[]

  @@map("bushes")
}

model User {
  id               String          @id
  user_name        String
  first_name       String
  last_name        String?
  user_group       String
  created_at       DateTime        @default(now())
  login            String?
  comments         Comment[]
  manager          Manager?
  petrol_station   PetrolStation?
  status_histories StatusHistory[]
  task_performer   TaskPerformer?
  group            Group           @relation(fields: [user_group], references: [id])

  @@map("users")
}

model Manager {
  bush_id         String?
  id              String          @id
  bush            Bush?           @relation(fields: [bush_id], references: [id])
  user            User            @relation(fields: [id], references: [id])
  petrol_stations PetrolStation[] @relation("ManagerToPetrolStation")

  @@map("managers")
}

model PetrolStation {
  bush_id  String?
  id       String    @id
  bush     Bush?     @relation(fields: [bush_id], references: [id])
  user     User      @relation(fields: [id], references: [id])
  tickets  Ticket[]
  managers Manager[] @relation("ManagerToPetrolStation")

  @@map("petrol_stations")
}

model Category {
  id              String          @id
  description     String
  words           TagWord[]
  task_performers TaskPerformer[]
  tickets         Ticket[]

  @@map("categores")
}

model TaskPerformer {
  category_id String?
  bush_id     String
  id          String    @id
  bush        Bush      @relation(fields: [bush_id], references: [id])
  category    Category? @relation(fields: [category_id], references: [id])
  user        User      @relation(fields: [id], references: [id])

  @@map("task_performers")
}

model Priority {
  id          String    @id
  description String
  tag_words   TagWord[]
  tickets     Ticket[]

  @@map("priorites")
}

model Status {
  id               String          @id
  description      String
  status_histories StatusHistory[]
  tickets          Ticket[]

  @@map("statuses")
}

model Ticket {
  id                String          @id @default(uuid())
  title             String
  ticket_category   String?
  ticket_priority   String?
  description       String
  petrol_station_id String
  status_id         String
  created_at        DateTime        @default(now())
  deadline          DateTime?
  attachments       Attachment[]
  comments          Comment[]
  status_history    StatusHistory[]
  petrol_station    PetrolStation   @relation(fields: [petrol_station_id], references: [id])
  status            Status          @relation(fields: [status_id], references: [id])
  category          Category?       @relation(fields: [ticket_category], references: [id])
  priority          Priority?       @relation(fields: [ticket_priority], references: [id])

  @@map("tickets")
}

model StatusHistory {
  ticket_id     String
  user_id       String
  ticket_status String
  created_at    DateTime @default(now())
  id            String   @id @default(uuid())
  ticket        Ticket   @relation(fields: [ticket_id], references: [id])
  status        Status   @relation(fields: [ticket_status], references: [id])
  user          User     @relation(fields: [user_id], references: [id])

  @@map("status_histories")
}

model Comment {
  id          String       @id @default(uuid())
  ticket_id   String
  user_id     String
  text        String
  created_at  DateTime     @default(now())
  attachments Attachment[]
  ticket      Ticket       @relation(fields: [ticket_id], references: [id])
  user        User         @relation(fields: [user_id], references: [id])

  @@map("comments")
}

model Attachment {
  id         String   @id @default(uuid())
  comment_id String?
  path       String
  ticket_id  String?
  comment    Comment? @relation(fields: [comment_id], references: [id])
  ticket     Ticket?  @relation(fields: [ticket_id], references: [id])

  @@map("attachments")
}

model TagWord {
  id          String   @id
  category_id String
  priority_id String
  category    Category @relation(fields: [category_id], references: [id])
  priority    Priority @relation(fields: [priority_id], references: [id])

  @@map("tag_words")
}
